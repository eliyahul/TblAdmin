@model IEnumerable<TblAdmin.Areas.Books.Models.Publisher>

@{
    ViewBag.Title = "Publishers";
}

<h2>Publishers</h2>

<p>
    @Html.ActionLink("Create Publisher", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
